<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>FHIR Navigator</Title>
        <Description>HIR Navigator is framework for real world use of the FHIR API. It is a supporting abstraction layer around the basic FHIR interactions simplifying the most common use cases and challenges developers face when using these APIs in practice.</Description>
        <PackageProjectUrl>https://github.com/angusmillar/FhirNavigator</PackageProjectUrl>
        <RepositoryUrl>https://github.com/angusmillar/FhirNavigator</RepositoryUrl>
        <RepositoryType>GIT</RepositoryType>
        <PackageTags>FHIR</PackageTags>
        <Version>0.0.3</Version>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Hl7.Fhir.R4" Version="5.9.1" />
      <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
    </ItemGroup>

</Project>
